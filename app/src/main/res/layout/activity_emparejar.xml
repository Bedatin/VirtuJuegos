<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulFondo"
    android:orientation="horizontal"
    tools:context=".juegos.EmparejarActivity">

    <RelativeLayout
        android:splitMotionEvents="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btnReplayParejas"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_replay_white_24dp"/>

        <TextView
            android:gravity="center"
            android:id="@+id/textBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:text="Busca las parejas"
            android:textColor="#FFFFFF"
            android:textSize="50sp"
            android:textStyle="bold" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btnPareja1"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/btn_carta" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btnPareja2"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/btn_carta" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btnPareja3"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="270dp"
            android:background="@drawable/btn_carta" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btnPareja4"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="270dp"
            android:background="@drawable/btn_carta" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btnPareja5"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="420dp"
            android:background="@drawable/btn_carta" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btnPareja6"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="420dp"
            android:background="@drawable/btn_carta" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btnPareja7"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="580dp"
            android:background="@drawable/btn_carta" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/btnPareja8"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="580dp"
            android:background="@drawable/btn_carta" />
    </RelativeLayout>
</LinearLayout>