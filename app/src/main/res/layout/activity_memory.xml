<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulFondo"
    android:orientation="vertical"
    tools:context=".juegos.MemoryActivity">

    <TextView
        android:id="@+id/nada"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_arrow_back_black_24dp"/>

    <Button
        android:id="@+id/btnBackMemo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_arrow_back_black_24dp"/>

    <Button
        android:id="@+id/btnMute"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toStartOf="@id/btnInfoMemo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_volume"/>

    <Button
        android:id="@+id/btnInfoMemo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_info"/>

    <Button
        android:id="@+id/btnReplay"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toTopOf="@id/txtCantando"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_replay_white_24dp"/>


    <TextView
        android:id="@+id/txtCantando"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/Blanco"
        tools:text="@string/Gana_Pop"
        app:layout_constraintBottom_toTopOf="@id/txtCheck"/>

    <TextView
        android:id="@+id/txtCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/Blanco"
        android:text="@string/Gana_Pop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Linear1"/>


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <LinearLayout
        android:id="@+id/Linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/guideline">

        <ImageButton
            android:id="@+id/btnHipo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="15dp"
            android:background="@drawable/btn_borde_rojo"
            android:src="@drawable/ic_audiotrack"
            android:textColor="@color/Blanco"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btnCoco"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="15dp"
            android:background="@drawable/btn_borde_verde"
            android:src="@drawable/ic_audiotrack"
            android:textColor="@color/Blanco"
            android:textSize="20sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/Linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/guideline">

        <ImageButton
            android:id="@+id/btnPato"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="15dp"
            android:background="@drawable/btn_borde_naranja"
            android:src="@drawable/ic_audiotrack"
            android:textColor="@color/Blanco"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/btnRana"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_margin="15dp"
            android:background="@drawable/btn_borde_blanco"
            android:src="@drawable/ic_audiotrack"
            android:textColor="@color/Blanco"
            android:textSize="20sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>