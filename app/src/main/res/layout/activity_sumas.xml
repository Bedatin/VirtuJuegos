<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CD2196F3"
    android:orientation="vertical"
    tools:context=".juegos.SumasActivity">
    <Button
        android:id="@+id/botonAtras"
        android:layout_width="103dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_carta"
        android:text="Atras"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textoRondas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="Ronda"
            android:textSize="17sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/numeroRondas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/textoRondas"
            android:text="7"
            android:textSize="17sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:text="Vidas"
            android:textSize="17sp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/vidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:text="OOO"
        android:textSize="17sp"
        android:textStyle="bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/primerNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:text="7"
            android:textSize="45sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/signo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/segundoNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="7"
            android:textSize="45sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/resultado"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Resultado"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/boton1"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:textColor="#111111"
            android:background="@drawable/btn_carta"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_weight="1"
            android:text="16"
            android:textSize="40sp" />
        <Button
            android:id="@+id/boton2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:textColor="#111111"
            android:background="@drawable/btn_carta"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_weight="1"
            android:text="15"
            android:textSize="40sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/boton3"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:textColor="#111111"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="17dp"
            android:layout_weight="1"
            android:background="@drawable/btn_carta"
            android:text="14"
            android:textSize="40sp" />
        <Button
            android:id="@+id/boton4"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:textColor="#111111"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="17dp"
            android:layout_weight="1"
            android:background="@drawable/btn_carta"
            android:text="17"
            android:textSize="40sp" />
    </LinearLayout>
</LinearLayout>
